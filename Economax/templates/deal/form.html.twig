{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Deal{% endblock %}

{% block body %}
    <div class="card-body">

        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.title) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description) }}
                    </div>
                    {% if type == 'deal' %}
                        <div class="row mb-3">
                            <div class="col">
                                {{ form_label(form.price) }}
                                <div class="input-group">
                                    {{ form_widget(form.price) }}
                                    <span class="input-group-text" id="basic-addon2">€</span>
                                </div>

                            </div>
                            <div class="col">
                                {{ form_label(form.usualPrice) }}
                                <div class="input-group">
                                    {{ form_widget(form.usualPrice) }}
                                    <span class="input-group-text" id="basic-addon2">€</span>
                                </div>
                            </div>
                            <div class="col">
                                {{ form_label(form.shipping) }}
                                <div class="input-group">
                                    {{ form_widget(form.shipping) }}
                                    <span class="input-group-text" id="basic-addon2">€</span>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {{ form_rest(form) }}
                    <button type="submit" class="btn btn-success btn-sm text-white">
                        <i class="icon cil-send"></i> Poster
                    </button>
                </div>
                <div class="col-md-6">
                    <h1>test</h1>
                </div>
            </div>
        </div>


        {{ form_end(form) }}
    </div>
{% endblock %}




