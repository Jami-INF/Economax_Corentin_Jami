{% extends 'base.html.twig' %}

{% block title %}{{ type|capitalize }}{% endblock %}

{% block body %}

    <div class="container">
        {% for deal in deals %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ deal.title }}</h5>
                    <div class="card-subtitle mb-2 text-muted">
                        <a class="btn btn-primary" href="#">Moins</a>
                        <span class="">{{ deal.temperature }}</span>
                        <a class="btn btn-primary" href="#" >Plus</a>
                    </div>
                    <p class="card-text">{{ deal.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}