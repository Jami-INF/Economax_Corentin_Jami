{% extends 'base.html.twig' %}

{% block title %}{{ type|capitalize }}{% endblock %}

{% block body %}

    <div class="container">
        {% for deal in deals %}
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ deal.title }} </h5>

                    <h6 class="card-subtitle mb-2 text-muted">{{ deal.price }} â‚¬</h6>

                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                                <button class="btn btn-primary">-</button>
                            </div>
                            <div class="col-sm-4 text-center">
                                <span class="value">5</span>
                            </div>
                            <div class="col-sm-4 text-end">
                                <button class="btn btn-danger">+</button>
                            </div>
                        </div>
                    </div>

                    <div class="card-subtitle mb-2 text-muted">
                        <a class="btn btn-primary" href="#">Moins</a>
                        <span class="">{{ deal.temperature }}</span>
                        <a class="btn btn-primary" href="#" >Plus</a>
                    </div>
                    <p class="card-text">{{ deal.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}