{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <a class="btn btn-success" href="{{ path("app_group_create") }}">Cr√©er un groupe</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Groupes</th>
                </tr>
            </thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            {% for group in groups %}
                <tr>
                    <td>
                        <a href="{{ path("app_group_show", {id: group.id}) }}">{{ group.name }}</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path("app_group_delete", {id: group.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
