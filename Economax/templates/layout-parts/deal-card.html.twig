

<div class="card my-4">
    <div class="card-body m-3">
        <div class="">
            <button class="btn btn-primary btn-sm decrease-temperature" id_deal="{{ deal.id }}">-</button>
            <span class="value {% if deal.getSumTemperatures() > 0 %}text-danger{% else %}text-primary{% endif %}" id="temp-{{ deal.id }}">{{ deal.getSumTemperatures() }}°</span>
            <button class="btn btn-danger btn-sm increase-temperature" id_deal="{{ deal.id }}">+</button>
            <span class="float-end"><i class="bi bi-clock"></i> Le {{ deal.createdAt|date('d M Y') }}</span>
        </div>
        <div class="">
            <a class="text-decoration-none text-black" href="{{ path('app_deal_info', {id: deal.id}) }}">
                <h4 class="card-title">{{ deal.title }}</h4>
                {% if deal.type == 'Advert' %}
                    <h6 class="card-subtitle mb-2 text-muted">{{ deal.price }}€</h6>
                {% elseif deal.type == 'PromoCode' %}
                    {% if (deal.typeReduc.value == 'percent') %}
                        <h6 class="card-subtitle mb-2 text-muted">{{ deal.value }}%</h6>
                    {% elseif (deal.typeReduc.value == 'amount') %}
                        <h6 class="card-subtitle mb-2 text-muted">{{ deal.value }}€</h6>
                    {% endif %}
                {% endif %}
                <p class="card-text justify">{{ deal.getShortDescription() }}</p>
            </a>
        </div>
        <div class="my-3">
            <span class="">Deal postée par {{ deal.user.username }}</span>
            <a class="text-decoration-none text-black float-end" href="{{ path('app_deal_info', {id: deal.id}) }}">
                <button class="btn btn-primary">{{ deal.comments|length }}  <i class="bi bi-chat-left-text"></i></button>
                <button class="btn btn-primary">Voir le deal  <i class="bi bi-box-arrow-up-right"></i></button>
            </a>
        </div>
    </div>
</div>