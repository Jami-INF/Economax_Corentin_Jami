{% extends 'base.html.twig' %}

{% block title %}Paramètres{% endblock %}

{% block body %}

    <div class="container mt-2">
        <div class="card">
            <h1 class="card-header">Paramètres</h1>

            <div class="m-3">
                {{ form_start(form) }}
                <div class="mb-3">
                    <div class="d-flex align-items-center">
                        <div>
                            {{ form_row(form.avatar) }}
                            <small class="form-text text-muted">Formats d'image acceptés : JPG, JPEG, PNG</small>
                            {% if user.avatar %}
                                <img src="{{ asset('images/avatars/' ~ user.avatar) }}" alt="Avatar" class="img-thumbnail mt-2" style="width: 200px">
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    {{ form_row(form.username) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.email) }}
                </div>

                <div class="mb-3">
                    {{ form_row(form.description) }}
                </div>

                <button type="submit" class="btn btn-primary">Mettre à jour</button>

                {{ form_end(form) }}

                <a href="#" class="btn btn-danger mt-3">Supprimer le compte</a>
            </div>
        </div>

    </div>


{% endblock %}
